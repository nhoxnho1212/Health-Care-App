<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="284dp"
        android:layout_height="157dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="83dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="138dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="LOGO"
        android:textColor="#F31616"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="284dp"
        android:layout_height="56dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="336dp"
        android:backgroundTint="#FDFDFD"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Nhập email hoặc SDT"
        android:textColor="#B5B5B5"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="284dp"
        android:layout_height="56dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="440dp"
        android:backgroundTint="#FDFDFD"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Nhập mật khẩu"
        android:textColor="#B5B5B5"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="102dp"
        android:layout_height="66dp"
        android:layout_marginTop="496dp"
        android:backgroundTint="#4D47A8"
        android:buttonTint="#7B97B3"
        android:textColor="#CF1C1C"
        android:textOff="Tăt hiển thị mật khẩu"
        android:textOn="Hiển thị mật khẩu"
        android:thumbTint="#1480AA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="516dp"
        android:text="Hiển thị mất khẩu"
        android:textColor="#989898"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="568dp"
        android:backgroundTint="#3600A9"
        android:text="Đăng Nhập"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtfogetpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="640dp"
        android:backgroundTint="#7AC1C1C1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Quên mật khẩu ?"
        android:textAlignment="center"
        android:textColor="#BDBDBD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
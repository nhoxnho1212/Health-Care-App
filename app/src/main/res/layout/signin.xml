<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0D0D"
    android:backgroundTint="#000000">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="284dp"
        android:layout_height="157dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="83dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/btn_aceptOTP4"
        android:layout_width="171dp"
        android:layout_height="62dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="492dp"
        android:backgroundTint="#3600A9"
        android:text="Tiếp Tục"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_nhappass5"
        android:layout_width="267dp"
        android:layout_height="61dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="368dp"
        android:backgroundTint="#878787"
        android:ems="10"
        android:inputType="phone"
        android:text="Nhập Email hoặc SDT"
        android:textAlignment="center"
        android:textColor="#AAAAAA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_addinfo"
        android:layout_width="250dp"
        android:layout_height="57dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="277dp"
        android:text="Nhập Thông Tin"
        android:textAlignment="center"
        android:textColor="#FFEEEE"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="211dp"
        android:layout_height="54dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="143dp"
        android:text="LOGO"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>